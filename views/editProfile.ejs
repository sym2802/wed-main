<!DOCTYPE html>
<html>

<head>
  <title>Profile edit</title>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" type="text/css" href="modules/bootstrap/css/bootstrap.css" />
  <link rel="stylesheet" type="text/css" href="./css/style.css" />
</head>

<body>
  <div class="wrapper">
    <!-- ===== header start ===== -->
    <%- include('./blocks/header') %>
      <!-- ===== header end ===== -->

      <main>
        <div class="container">
          <h1>Edit profile</h1>
          <form action="" method="POST">
            <div class="row mb-3">
              <div class="row mb-3">
                <label for="inputLastName" class="col-sm-2 col-form-label">Last name:</label>
                <div class="col-sm-10">
                  <input class="form-control" type="lastName" id="lastName" name="lastName" value="<%= lastName %>" />
                </div>
              </div>
              <div class="row mb-3">
                <label for="inputFirstName" class="col-sm-2 col-form-label">Name:</label>
                <div class="col-sm-10">
                  <input class="form-control" type="name" id="name" name="name" value="<%= name %>" />
                </div>
              </div>
              <div class="row mb-3">
                <label for="secondName" class="col-sm-2 col-form-label">Second name:</label>
                <div class="col-sm-10">
                  <input class="form-control" type="secondName" id="secondName" name="secondName"
                    value="<%= secondName %>" />
                </div>
              </div>
              <div class="row mb-3">
                <label for="email" class="col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-10">
                  <input class="form-control" type="email" id="email" name="email" value="<%= email %>" />
                </div>
              </div>
              <div class="row mb-3">
                <label for="phone" class="col-sm-2 col-form-label">Phone:</label>
                <div class="col-sm-10">
                  <input class="form-control" type="phone" id="phone" name="phone" value="<%= phone %>" />
                </div>
              </div>
            </div>
            <button class="btn btn-warning" type="submit">
              Save
            </button>
          </form>
        </div>
      </main>

      <!-- ===== footer start ===== -->
      <%- include('./blocks/footer') %>
        <!-- ===== footer end ===== -->
  </div>
</body>

</html>